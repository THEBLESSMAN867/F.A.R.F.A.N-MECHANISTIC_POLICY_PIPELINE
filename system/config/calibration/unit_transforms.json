{
  "_metadata": {
    "version": "1.0.0",
    "description": "Unit-of-analysis transformation formulas for layer computation",
    "last_updated": "2024-12-02",
    "notes": "Migrated from layer_computers.py transformation logic"
  },
  "g_functions": {
    "identity": {
      "description": "g(U) = U - Direct passthrough",
      "type": "identity",
      "applicable_roles": []
    },
    "constant": {
      "description": "g(U) = 1.0 - Not sensitive to unit quality",
      "type": "constant",
      "value": 1.0,
      "applicable_roles": ["ingest", "processor", "utility", "orchestrator"]
    },
    "piecewise_linear": {
      "description": "g(U) = 2*U - 0.6 if U >= 0.3 else 0",
      "type": "piecewise_linear",
      "abort_threshold": 0.3,
      "slope": 2.0,
      "offset": -0.6,
      "applicable_roles": ["analyzer", "executor", "score"]
    },
    "sigmoidal": {
      "description": "g(U) = 1 - exp(-k*(U - x0))",
      "type": "sigmoidal",
      "k": 5.0,
      "x0": 0.5,
      "applicable_roles": ["extractor"]
    }
  },
  "chain_layer": {
