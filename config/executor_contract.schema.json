{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Executor Contract V2",
  "type": "object",
  "required": ["contract_version", "identity", "method_inputs", "assembly_rules", "validation_rules"],
  "properties": {
    "contract_version": { "type": "string" },
    "identity": {
      "type": "object",
      "required": ["base_slot", "question_id", "question_global", "dimension_id", "policy_area_id", "cluster_id"],
      "properties": {
        "base_slot": { "type": "string" },
        "question_id": { "type": "string" },
        "question_global": { "type": ["integer", "number"] },
        "dimension_id": { "type": "string" },
        "policy_area_id": { "type": "string" },
        "cluster_id": { "type": "string" }
      },
      "additionalProperties": true
    },
    "traceability": {
      "type": "object",
      "properties": {
        "source_file": { "type": "string" },
        "json_path": { "type": "string" },
        "source_hash_TODO": { "type": "string" }
      },
      "additionalProperties": true
    },
    "scoring": {
      "type": "object",
      "properties": {
        "scoring_modality": { "type": "string" },
        "scoring_definition_ref": { "type": "string" },
        "expected_output_type": { "type": "string" }
      },
      "additionalProperties": true
    },
    "signal_requirements": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "policy_area_source": { "type": "string" },
        "expected_signal_pack_keys": { "type": "array", "items": { "type": "string" } },
        "aggregation": { "type": "string" }
      },
      "additionalProperties": true
    },
    "method_inputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["class", "method", "provides", "priority"],
        "properties": {
          "class": { "type": "string" },
          "method": { "type": "string" },
          "description": { "type": "string" },
          "provides": {
            "oneOf": [
              { "type": "string" },
              { "type": "array", "items": { "type": "string" } }
            ]
          },
          "priority": { "type": ["integer", "number"] },
          "args": { "type": "object", "additionalProperties": true }
        },
        "additionalProperties": true
      }
    },
    "assembly_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["target", "sources", "merge_strategy"],
        "properties": {
          "target": { "type": "string" },
          "sources": { "type": "array", "items": { "type": "string" } },
          "merge_strategy": {
            "type": "string",
            "enum": ["concat", "first", "last", "mean", "max", "min", "weighted_mean", "majority"]
          },
          "weights": { "type": "array", "items": { "type": "number" } },
          "default": {},
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "validation_rules": {
      "type": "object",
      "required": ["rules"],
      "properties": {
        "na_policy": { "type": "string" },
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["field"],
            "properties": {
              "field": { "type": "string" },
              "type": {
                "type": "string",
                "enum": ["array", "integer", "float", "string", "boolean", "object", "any"]
              },
              "required": { "type": "boolean", "default": false },
              "min_length": { "type": "integer" },
              "max_length": { "type": "integer" },
              "range": {
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "items": { "type": ["number", "null"] }
              },
              "allowed_values": { "type": "array" },
              "pattern": { "type": "string" },
              "must_contain": {
                "type": "object",
                "properties": {
                  "count": { "type": "integer" },
                  "elements": { "type": "array", "items": { "type": "string" } }
                },
                "additionalProperties": false
              },
              "should_contain": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "elements": { "type": "array", "items": { "type": "string" } },
                    "minimum": { "type": "integer" }
                  },
                  "additionalProperties": false
                }
              },
              "description": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "error_handling": {
      "type": "object",
      "properties": {
        "failure_contract": {
          "type": "object",
          "properties": {
            "abort_if": { "type": "array", "items": { "type": "string" } },
            "emit_code": { "type": "string" }
          },
          "additionalProperties": false
        },
        "on_method_failure": { "type": "string" },
        "on_assembly_failure": { "type": "string" }
      },
      "additionalProperties": true
    },
    "human_answer_template": { "type": "string" }
  },
  "additionalProperties": true
}
